{
  "manifest_version": 2,

  "name": "LearnersTab",
  "description": "The new tab extension for learners",
  "author": "Saurabh Burewar",
  "version": "1.0.1",
  "browser_action": {
    "default_popup": "index.html"
  },
  "chrome_url_overrides": {
    "newtab": "index.html"
  },

  "background": {
    "scripts": ["context.js"],
    "persistent": false
  },

  "permissions": ["tabs", "history", "contextMenus"],

  "icons": {
    "16": "LT-logo-01.png",
    "32": "LT-logo-01.png",
    "48": "LT-logo-01.png",
    "128": "LT-logo-01.png"
  },

  "content_security_policy": "script-src 'self' 'sha256-Owb/F4ouv3m6kDm0F31VrSO5+4s9U2Jtgn2tfCqKTrE='; object-src 'self'"
}
